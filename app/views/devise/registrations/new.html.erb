<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h2>Sign up</h2>
      <div class="card border-primary">
        <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group"></div>
          <p>
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
          </p>
          <p>
            <%= f.label :last_name %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control' %>
          </p>

          <p>
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </p>

          <p>
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control js-password' %>
          </p>

          <p>
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control js-password-confirmation' %>
          </p>

            <%= f.submit "Sign up", class: 'btn btn-primary' %>

        <% end %>
        </div>
      </div>

       <div class="mt-2">
          <%= render "devise/shared/links" %>
      </div>
  </div>
</div>

