<div class="mt-4 mb-4">
  <h1><%= t('.header') %> </h1>
</div>

<div class="row">
  <% if @tests.present? %>
    <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th scope="col" class='sort-by-title pointer'>
          <%= t('.title') %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
        </th>
        <th scope="col"><%= t('.level') %></th>
        <th scope="col"><%= t('.questions_count') %></th>
        <th scope="col"><%= t('.action') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @tests %>
    </tbody>
  </table>
  
  <% else %>
    <p><%= t('.not_found') %></p>
  <% end %>
</div>