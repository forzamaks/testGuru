
<h3><%= @question.test.title %> Question</h3>

<p><%= @question.body %></p>

<h2>Answers</h2>

<%= link_to 'New answer', new_admin_question_answer_path(@question) %>

<ol>
<%= render partial: 'answers/answer', collection: @question.answers %>
</ol>



<hr/>
<p>
  <%= link_to 'Back', admin_test_path(@question.test_id) %> | 
  <%= link_to 'Edit', edit_admin_question_path(@question) %> | 
  <%= link_to 'Delete', admin_question_path(@question.id), method: :delete, data: { confirm: 'Are you sure?' } %>
</p>