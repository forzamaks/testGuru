 <tr>
  <td scope="row" class="align-middle">
    <%= badge.title %>
  </td>
  <td class="align-middle"><%= badge.image_url %></td>

  <td class="align-middle">
    <%= link_to t('.show'), admin_badge_path(badge) %>
  </td>
  <td class="align-middle">
    <%= link_to t('.edit'), edit_admin_badge_path(badge)%>
  </td>
  <td class="align-middle">
    <%= link_to t('.delete'), admin_badge_path(badge), method: :delete, data: { confirm: t('.confirm') } %>
  </td>
</tr>