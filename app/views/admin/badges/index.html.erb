<h1><%= t('.header') %></h1>
<p>
  <%= link_to t('.new_test'), new_admin_badge_path %>
</p>
<% if @badges.present? %>
  <%= render 'shared/errors', resource: @badge %>
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th scope="col" class='sort-by-title pointer'>
          <%= t('.title') %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
        </th>
        <th scope="col"><%= t('.image_url') %></th>
        <th scope="col" colspan="3"><%= t('.action') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @badges %>
    </tbody>
  </table>
  
<% else %>
  <p><%= t('.not_found') %></p>
<% end %>