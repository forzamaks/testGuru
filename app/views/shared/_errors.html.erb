<% if resource.present? && resource.errors.present? %>
  <%= content_tag :div, class: 'alert alert-danger', data: { resource_id: resource.id } do %>
    <p>
      <%= t('.header', count: resource.errors.count) %>
    </p>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      
    </ul>
  <% end %>
<% end %>
